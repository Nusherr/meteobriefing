{
  "name": "meteobriefing",
  "version": "1.1.0",
  "description": "Automated weather briefing PowerPoint generator",
  "main": "./out/main/index.js",
  "author": "MeteoBriefing",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package:mac": "electron-vite build && electron-builder --mac",
    "package:win": "electron-vite build && electron-builder --win",
    "release:mac": "electron-vite build && electron-builder --mac --publish always",
    "release:win": "electron-vite build && electron-builder --win --publish always"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.7.3",
    "pptxgenjs": "^3.12.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.meteobriefing.app",
    "productName": "Briefing Meteo",
    "publish": {
      "provider": "github",
      "owner": "Nusherr",
      "repo": "meteobriefing"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        },
        {
          "target": "zip",
          "arch": "universal"
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.weather"
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  }
}
